{
    "exp_name": "N2M_training",
    "model": {
        "encoder": {
            "name": "PointBERT",
            "config": {
                "NAME": "PointTransformer",
                "trans_dim": 384,
                "depth": 12,
                "drop_path_rate": 0.1,
                "cls_dim": 40,
                "num_heads": 6,
                "group_size": 32,
                "num_group": 512,
                "encoder_dims": 256
            },
            "ckpt": "models/PointBERT/PointTransformer_ModelNet8192points.pth",
            "freeze": false
        },
        "decoder": {
            "name": "mlp",
            "config": {
                "dropout": 0.1
            },
            "num_gaussians": 1,
            "output_dim": 4
        }
    },
    "dataset": {
        "dataset_path": "datasets/lamp",
        "anno_path": "meta_aug.json",
        "pointnum": 8192,
        "train_val_ratio": 0.9,
        "augmentations": {
            "rotation_xythetaz": {
                "min_angle": -180,
                "max_angle": 180
            },
            "translation_xythetaz": {
                "radius": 1
            }
        }
    },
    "train": {
        "batch_size": 32,
        "num_epochs": 300,
        "learning_rate": 1e-4,
        "num_workers": 8,
        "val_freq": 50,
        "loss": {
            "name": "mle",
            "config": {
                "lam_weight": 0.1,
                "lam_dist": 0.1
            }
        },
        "wandb": {
            "name": null,
            "project": null,
            "entity": null
        },
        "output_dir": "training/test"
    }
}